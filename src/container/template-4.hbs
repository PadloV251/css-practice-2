
<header class="header">
    <div>
        {{> logo}}
    </div>

    <nav class="header-nav">
        <div class="header-nav-right">
            {{> nav list=header}}
        </div>
    </nav>
</header>

{{#with main}}
    <main class="hero">
        <img src="{{image}}" alt="Hero image" class="hero-photo">
        <div class="hero-content">
            <h1 class="hero-title">
                {{heading}}
            </h1>
            <p class="hero-text">{{description}}</p>
            <a href="{{href}}" class="button card-button">{{button}}</a>
        </div>
    </main>
{{/with}}

<main class="featured">
    {{#each featured}}
        {{> cardFeatured data=this}}
    {{/each}}
</main>


<div class="actions">
    {{#each actions}}
        <div class="actions-block">
            <div class="form-content">
                <h3 class="form-title">{{heading}}</h3>
            </div>
            <div class="form-action">
                <a href="{{url}}" class="button form-button">{{text}}</a>
            </div>
        </div>
    {{/each}}
</div>


<footer class="footer">
    <div>
        {{> logo}}
        <span class="footer-copyright">Copyright 2023-2034</span>
    </div>

    {{#each footer}}
        <div>
            <span class="footer-title">{{title}}</span>
            {{> nav list=links isVertical=true}}
        </div>
    {{/each}}
</footer>
