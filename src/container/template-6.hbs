<header class="header">
    <div>
        {{> logo}}
    </div>

    <nav class="header-nav">
        <div class="header-nav-right">
            {{> nav list=header}}
        </div>
    </nav>
</header>

<main class="main">
    {{#with info}}
        <div class="messages">
            <h1 class="messages-title">{{title}}</h1>
            <p class="messages-desc">{{description}}</p>
            {{!-- {{#each list}}
                <div class="msg">
                    <strong class="msg-name">{{name}}</strong>
                    <p class="msg-text">{{message}}</p>
                    <span class="msg-day">{{day}}</span>
                </div>
            {{/each}} --}}

            {{!-- <a href="#" class="messages-link">All messages</a> --}}
        </div>
    {{/with}}

    {{#with form}}
        <form class="form">
            <div class="form-input-list">
                {{#each inputs}}
                    <input type="{{type}}" placeholder="{{placeholder}}" class="form-input" name="{{name}}" id="form-input-{{id}}">
                {{/each}}
            </div>

            <div class="form-checkbox">
                <input type="checkbox" name="{{checkbox.name}}" id="{{checkbox.name}}">
                <div></div>
                <label for="{{checkbox.name}}">{{checkbox.label}}</label>
            </div>

            <button type="submit" class="form-button">{{button}}</button>
            <p class="form-info">{{info}}</p>
        </form>
    {{/with}}
</main>

<div class="updates">
    {{#with updates}}
        <h6 class="update-title">{{title}}</h6>
        {{#each list}}
        <div>
            <div class="vector"></div>
            <div class="media-body">
                <strong class="update-nickname">{{nickname}}</strong>
                <p class="update-text">{{description}}</p>
            </div>
        </div>
        {{/each}}
        <a href="{{show_all.url}}" class="messages-link">{{show_all.text}}</a>
    {{/with}}
</div>

<div class="expirience">
    {{#with expirience}}
        <div class="expirience-container">
            <h1 class="expirience-title">{{title}}</h1>
            <div class="badge-hot">{{badge}}</div>
        </div>
        <div class="row-list">
            {{#each list}}
                <div class="list">
                    <strong class="list-title">{{name}}</strong>
                    <p class="list-text">{{details}}</p>
                </div>
            {{/each}}
        </div>
    {{/with}}
</div>

<footer class="footer">
    <div>
        {{> logo}}
        <span class="footer-copyright">Copyright 2023-2034</span>
    </div>

    {{#each footer}}
        <div>
            <span class="footer-title">{{title}}</span>
            {{> nav list=links isVertical=true}}
        </div>
    {{/each}}
</footer>
